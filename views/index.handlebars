<div class ="container">  
  <h1 class = "text-center">Eat da Burger!</h1>
  <img src="assets/img/hamburger.png" style="height: 150px" class="mx-auto d-block"/>
  <div class ="row">
    <div class="col-md-4">
      <h3>Burgers Ready to Eat</h3>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
          <li>
          {{burger_name}}
            <button type="button" class="change-eaten btn btn-success btn-sm float-right" data-id="{{id}}" data-neweaten="{{devoured}}">Eat Now
            </button>
          </li>
          <br>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class ="col-md-4">
    </div>
    <div class="col-md-4">
      <h3>Burgers Consumed</h3>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
          <li>
          {{burger_name}}
          </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class ="col-md-3">
    </div>
    <div class ="col-md-6 text-center">
      <h2>Add a burger</h2>
      <form class="create-form">
       <div class="form-group">
        <label for="bu">Burger Name:</label>
        <input type="text" id="bu" name="name">
       </div>
      <button type="submit" class="btn btn-secondary px-5 btn-lg">&nbsp&nbspAdd Burger&nbsp&nbsp</button>
      </form>
    </div>
  </div>
</div>
